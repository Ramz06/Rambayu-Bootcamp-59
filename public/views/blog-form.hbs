<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Page</title>
    <link rel="stylesheet" href="assets/css/general/navbar.css" />
    <link rel="stylesheet" href="assets/css/pages/blog.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    {{> nav }}
    <main>
      <h1>Add My Project</h1>
      <form method="post" action="/api/blogs" enctype="multipart/form-data">
        <label for="name"
          >Project Name
          <input
            type="text"
            id="name"
            name="title"
            placeholder="Enter project name"
            autocomplete="off"
            required
          />
        </label>

        <div class="date-container">
          <label for="start-date" class="date" style="width: 100%"
            >Start Date
            <input type="date" id="start-date" name="startdate" style="width: 90%" required/>
          </label>
          <label for="end-date" class="date" style="width: 100%"
            >End Date
            <input type="date" id="end-date" name="enddate" style="width: 100%" required/>
          </label>
        </div>

        <label for="content"
          >Description
          <textarea
            id="content"
            rows="8"
            placeholder="Enter project content"
            name="content"
            required
          ></textarea>
        </label>

        <label>Technologies</label>
        <div class="tech-options">
          <label
            ><input
              type="checkbox"
              name="tech"
              value="Node Js"
              class="checkbox"
            />
            Node Js</label
          >
          <label
            ><input
              type="checkbox"
              name="tech"
              value="Next Js"
              class="checkbox"
            />
            Next Js</label
          >
          <label
            ><input
              type="checkbox"
              name="tech"
              value="React Js"
              class="checkbox"
            />
            React Js</label
          >
          <label
            ><input
              type="checkbox"
              name="tech"
              value="TypeScript"
              class="checkbox"
            />
            TypeScript</label
          >
        </div>

        <label for="image"
          >Upload Image
          <input type="file" id="image" name="imageurl" required/>
          <i class="fas fa-paperclip"></i>
        </label>

        <button type="submit" class="submit-btn" name="submit">Submit</button>
      </form>

      <!-- blog section -->
    {{!-- <script src="assets/src/js/blog.js"></script>
    <script src="assets/src/js/renderBlog.js"></script> --}}
    <script>
      const slideMenu = document.querySelector('nav ul')
      const menuToggle = document.querySelector('input[type="checkbox"]')

      console.log(menuToggle)
      menuToggle.addEventListener('click', function() {
          slideMenu.classList.toggle('slide')
      })
    </script>
  </body>
</html>
