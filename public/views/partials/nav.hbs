<header class="header_section">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-lg custom_nav-container">
      <a class="navbar-brand" href="/">
        <span> Rambays. </span>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class=""> </span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home 
              {{#if (eq activePage "home")}}<span class="sr-only">(current)</span>{{/if}}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blogs"> Blogs 
              {{#if (eq activePage "blogs")}}<span class="sr-only">(current)</span>{{/if}}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/testimonial"> Testimonial 
              {{#if (eq activePage "testimonial")}}<span class="sr-only">(current)</span>{{/if}}
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact"> Contact Me 
              {{#if (eq activePage "contact")}}<span class="sr-only">(current)</span>{{/if}}
            </a>
          </li>
          <li class="nav-item dropdown">
            {{#if user}}
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="userDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="fa fa-user" aria-hidden="true"></i> {{user}}
              </a>
            {{else}}
              <a class="nav-link" href="/users/login">
                <i class="fa fa-user" aria-hidden="true"></i> Login
              </a>
            {{/if}}
              <ul class="dropdown-menu" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/users/change-email" id="changeEmail">Change Email</a></li>
                <li><a class="dropdown-item" href="/users/change-password" id="changePassword">Change Password</a></li>
                <li>
                  <hr class="dropdown-divider" />
                </li>
                <li><button class="dropdown-item" href="/users/logout" id="logout">Logout</button></li>
              </ul>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</header>
